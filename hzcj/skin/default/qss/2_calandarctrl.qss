CalandarBtn[forward=true]
{
    background:transparent;
    background-image:url(:/skin/default/img/infopage/right.png);
    background-repeat:no-repeat;
    background-position:center;
}

CalandarBtn[forward=false]
{
    background:transparent;
    background-image:url(:/skin/default/img/infopage/left.png);
    background-repeat:no-repeat;
    background-position:center;
}

CalandarBtn[forward=true]:hover
{
    background:transparent;
    background-image:url(:/skin/default/img/infopage/right_hover.png);
    background-repeat:no-repeat;
    background-position:center;
}

CalandarBtn[forward=false]:hover
{
    background:transparent;
    background-image:url(:/skin/default/img/infopage/left_hover.png);
    background-repeat:no-repeat;
    background-position:center;
}
